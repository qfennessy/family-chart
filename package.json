{
  "name": "family-chart",
  "version": "0.9.0",
  "type": "module",
  "description": "family tree creator and viewer",
  "keywords": [
    "datafull",
    "family-chart",
    "family tree",
    "d3"
  ],
  "homepage": "https://donatso.github.io/family-chart/",
  "license": "ISC",
  "author": {
    "name": "donatso"
  },
  "main": "dist/family-chart.js",
  "types": "dist/types/index.d.ts",
  "unpkg": "dist/family-chart.min.js",
  "module": "dist/family-chart.esm.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/family-chart.esm.js"
      },
      "require": {
        "types": "./dist/types/index.d.ts",
        "default": "./dist/family-chart.js"
      }
    },
    "./styles/*": "./dist/styles/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donatso/family-chart.git"
  },
  "files": [
    "dist/**/*.js",
    "dist/styles/**",
    "dist/types/**"
  ],
  "scripts": {
    "build": "node build.js",
    "test": "cypress open",
    "test-run": "cypress run",
    "test:unit": "vitest run",
    "test:bench": "vitest run tests/performance --reporter=verbose",
    "test:bench:watch": "vitest tests/performance --reporter=verbose",
    "benchmark": "vitest run tests/performance --reporter=verbose 2>&1 | tee benchmark-results.txt",
    "benchmark:calculate-tree": "vitest run tests/performance/calculate-tree.bench.ts --reporter=verbose",
    "benchmark:store": "vitest run tests/performance/store-lookups.bench.ts --reporter=verbose",
    "benchmark:handlers": "vitest run tests/performance/handlers.bench.ts --reporter=verbose",
    "dev": "vite",
    "docs": "typedoc",
    "docs:deploy": "yarn docs && gh-pages -d docs/api -b gh-pages",
    "prepublishOnly": "node prePublish.js"
  },
  "sideEffects": false,
  "dependencies": {
    "d3": "^7.9.0"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/d3": "^7.4.3",
    "@vitest/ui": "^4.0.18",
    "cypress": "15.2.0",
    "gh-pages": "^6.3.0",
    "http-server": "^14.1.1",
    "rollup": "^4.45.1",
    "typedoc": "^0.28.13",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^4.0.18"
  }
}
